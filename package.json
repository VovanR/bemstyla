{
  "name": "bemstyla",
  "description": "Creates block__elem_mod-name_mod-val styl files",
  "version": "0.6.0",
  "author": "Vladimir Rodkin <mail@vovanr.com>",
  "keywords": [
    "bem",
    "cli",
    "stylus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VovanR/bemstyla"
  },
  "bin": {
    "bemstyla": "./bin/bemstyla.js"
  },
  "engines": {
    "node": ""
  },
  "scripts": {
    "coverage": "istanbul cover _mocha --",
    "coveralls": "coveralls < coverage/lcov.info",
    "postpublish": "git push --follow-tags",
    "precoveralls": "npm run coverage",
    "prepush": "npm test; npm run lint",
    "tdd": "mocha --watch",
    "test": "mocha",
    "lint": "npm run jslint; npm run jscs",
    "jslint": "jshint --reporter ./node_modules/jshint-stylish/stylish.js ./lib/*.js ./bin/*.js ./test/*.js",
    "jscs": "jscs ./lib/*.js ./bin/*.js ./test/*.js"
  },
  "devDependencies": {
    "chai": "^2.1.2",
    "coveralls": "^2.11.2",
    "husky": "^0.7.0",
    "istanbul": "^0.3.11",
    "js-yaml": "^3.2.7",
    "jscs": "^1.12.0",
    "jscs-jsdoc": "^0.4.6",
    "jshint": "^2.7.0",
    "jshint-stylish": "^1.0.1",
    "mocha": "^2.2.1",
    "mocha-lcov-reporter": "0.0.2",
    "rimraf": "^2.3.2"
  },
  "bugs": {
    "url": "https://github.com/VovanR/bemstyla/issues"
  },
  "homepage": "https://github.com/VovanR/bemstyla",
  "license": "MIT",
  "dependencies": {
    "commander": "^2.7.1",
    "fs": "0.0.2",
    "lodash": "^3.6.0",
    "mkdirp": "^0.5.0",
    "path": "^0.11.14"
  }
}
